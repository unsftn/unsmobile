<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@color/colorPrimaryAlpha">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_idea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Team Caramba"
            android:textColor="@android:color/white"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/scientific_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:text="Physics" />

        <TextView
            android:id="@+id/project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is some description about team project with some text\nNew row starts right here and it has some extra content!"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>
